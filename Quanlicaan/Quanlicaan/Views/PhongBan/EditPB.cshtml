@model Quanlicaan.Models.Framework.PhongBan

@{
    ViewBag.Title = "Chỉnh sửa phòng ban";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Chỉnh sửa phòng ban</title>
    <link rel="stylesheet" href="~/css/main.css">
</head>
<body>
    <section class="get-in-touch">
        <h2 class="title">Chỉnh sửa  phòng ban</h2>

        @using (Html.BeginForm("EditPB", "PhongBan", FormMethod.Post, new { @class = "contact-form row" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div>
                <h4 class=" label"> Tên Phòng Ban</h4>
                <div class="col-md-12">
                    @Html.EditorFor(model => model.TenPB, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TenPB, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-field col-lg-12" style=" display: flex; justify-content: space-between;">
                <input class="submit-btn" type="submit" value="Submit">
                <button class="submit-btn">  @Html.ActionLink("Quay lại", "ShowAll", "", new { @class = "back" })</button>
            </div>

        }
    </section>
</body>
</html>





